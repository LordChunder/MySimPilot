<Window x:Class="MySimPilot.ViewModel.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sign Up" SizeToContent="WidthAndHeight" ResizeMode="NoResize" >
    <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Label Content="Sign Up for MySimPilot with your email" HorizontalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Email: " />
            <TextBox Name="TxtEmailInput" Width="248"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Password: " />
            <PasswordBox  Name="TxtPasswordInput" Width="248" ></PasswordBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Label Content="Confirm Password: " />
            <PasswordBox  Name="TxtPasswordConfirm" Width="248" ></PasswordBox>
        </StackPanel>
        <Button Click="btnSignUp_Click" Content="Sign Up" /> 
    </StackPanel>
</Window>
